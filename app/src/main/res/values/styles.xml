<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!--Main activity styles-->
    <style name="MainActivityRootRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainActivityTabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="MainActivityViewPager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_above">@id/nowPlayingConstraintLayout</item>
        <item name="android:layout_below">@id/SlidingTabs</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="MainActivityNowPlayingConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">
            @dimen/MainActivityNowPlayingConstraintLayout_layout_height
        </item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="MainActivityNowPlayingImageImageView">
        <item name="android:layout_width">@dimen/MainActivityNowPlayingImageImageView_layout_width
        </item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MainActivityNowPlayingTitleTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:paddingEnd">
            @dimen/MainActivityNowPlayingTitleTextView_padding_start_end
        </item>
        <item name="android:paddingStart">
            @dimen/MainActivityNowPlayingTitleTextView_padding_start_end
        </item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainActivityNowPlayingButtonsImageViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Full info activity styles-->
    <style name="FullInfoActivityRootLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FullInfoActivitySongInfoRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:paddingBottom">
            @dimen/FullInfoActivitySongInfoRelativeLayout_padding_top_bottom
        </item>
        <item name="android:paddingEnd">
            @dimen/FullInfoActivitySongInfoRelativeLayout_padding_start_end
        </item>
        <item name="android:paddingStart">
            @dimen/FullInfoActivitySongInfoRelativeLayout_padding_start_end
        </item>
        <item name="android:paddingTop">
            @dimen/FullInfoActivitySongInfoRelativeLayout_padding_top_bottom
        </item>
    </style>

    <style name="FullInfoActivityTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/FullInfoActivityTitleTextView_text_size</item>
    </style>

    <style name="FullInfoActivityArtistTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/fullInfoTitleTextView</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="FullInfoActivityImageImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="FullInfoActivityButtonsConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:paddingBottom">
            @dimen/FullInfoActivityButtonsConstraintLayout_padding_top_bottom
        </item>
        <item name="android:paddingTop">
            @dimen/FullInfoActivityButtonsConstraintLayout_padding_top_bottom
        </item>
    </style>

    <style name="FullInfoActivityButtonsImageViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Song list item styles-->
    <style name="SongListItemRootConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/SongListItemRootConstraintLayout_layout_height
        </item>
    </style>

    <style name="SongListItemImageImageView">
        <item name="android:layout_width">@dimen/SongListItemImageImageView_layout_width</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SongListItemDurationTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">@dimen/SongListItemDurationTextView_padding_start_end</item>
        <item name="android:paddingStart">@dimen/SongListItemDurationTextView_padding_start_end
        </item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/SongListItemDurationTextView_text_size</item>
    </style>

    <style name="SongListItemTitleTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingEnd">@dimen/SongListItemTitleTextView_padding_start_end</item>
        <item name="android:paddingStart">@dimen/SongListItemTitleTextView_padding_start_end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SongListItemArtistTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingEnd">@dimen/SongListItemArtistTextView_padding_start_end</item>
        <item name="android:paddingStart">@dimen/SongListItemArtistTextView_padding_start_end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/SongListItemArtistTextView_text_size</item>
    </style>

    <style name="SongListItemLikeImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingEnd">@dimen/SongListItemLikeImageView_padding_start_end</item>
        <item name="android:paddingStart">@dimen/SongListItemLikeImageView_padding_start_end</item>
    </style>


</resources>
